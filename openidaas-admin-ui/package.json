{
  "name": "openidaas-admin-ui",
  "version": "1.0.0",
  "description": "Admin UI for OpenIDaaS system",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:performance": "vitest run --config vitest.config.ts tests/performance",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headed": "cypress run --headed",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "test:e2e:record": "cypress run --record --key",
    "test:all": "npm run test:unit && npm run test:e2e",
    "verify:api": "node scripts/verify-api-config.js",
    "analyze:bundle": "node scripts/bundle-size-analyzer.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "animate.css": "^4.1.1",
    "axios": "^1.6.0",
    "echarts": "^6.0.0",
    "element-plus": "^2.4.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-i18n": "^12.0.0-alpha.3",
    "vue-router": "^4.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.0",
    "@types/node": "^20.0.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vitest/ui": "^1.0.0",
    "cypress": "^13.0.0",
    "eslint": "^8.49.0",
    "eslint-plugin-cypress": "^2.15.0",
    "eslint-plugin-vue": "^9.17.0",
    "gzip-size": "^7.0.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.0",
    "sass-embedded": "^1.97.3",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.0"
  }
}
