# ============================================================================
# OpenIDaaS Environment Configuration
# Copy this file to .env and update the values
# ============================================================================

# --------------------------------------------------------------------------
# Docker Registry
# --------------------------------------------------------------------------
IMAGE_REGISTRY=openidaas
VERSION=latest

# --------------------------------------------------------------------------
# Database Configuration
# --------------------------------------------------------------------------
POSTGRES_USER=openidaas
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_PORT=5432
DATABASE_URL=jdbc:postgresql://postgres:5432/openidaas

# --------------------------------------------------------------------------
# Redis Configuration
# --------------------------------------------------------------------------
REDIS_PASSWORD=change-this-redis-password-in-production
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# --------------------------------------------------------------------------
# JWT Configuration
# --------------------------------------------------------------------------
JWT_SECRET=change-this-jwt-secret-in-production-should-be-very-long-and-random
JWT_EXPIRATION=3600

# --------------------------------------------------------------------------
# Service Ports
# --------------------------------------------------------------------------
GATEWAY_PORT=8080
AUTH_PORT=8081
USER_PORT=8082
TENANT_PORT=8083

# --------------------------------------------------------------------------
# External Ports
# --------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# --------------------------------------------------------------------------
# Monitoring Ports
# --------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-grafana-password

# --------------------------------------------------------------------------
# Replicas
# --------------------------------------------------------------------------
AUTH_REPLICAS=2
USER_REPLICAS=2
GATEWAY_REPLICAS=2
TENANT_REPLICAS=1

# --------------------------------------------------------------------------
# Network
# --------------------------------------------------------------------------
NETWORK_SUBNET=172.20.0.0/16

# --------------------------------------------------------------------------
# Backup
# --------------------------------------------------------------------------
BACKUP_DIR=./backups
PROMETHEUS_RETENTION=15d

# --------------------------------------------------------------------------
# TLS
# --------------------------------------------------------------------------
GRAFANA_ROOT_URL=http://localhost:3000
