<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qoobot.openidaas.organization.mapper.PositionMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.qoobot.openidaas.organization.entity.Position">
        <id column="id" property="id"/>
        <result column="position_code" property="positionCode"/>
        <result column="position_name" property="positionName"/>
        <result column="dept_id" property="deptId"/>
        <result column="level" property="level"/>
        <result column="job_grade" property="jobGrade"/>
        <result column="reports_to" property="reportsTo"/>
        <result column="is_manager" property="isManager"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="created_by" property="createdBy"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="tenant_id" property="tenantId"/>
    </resultMap>

    <!-- 根据部门ID查询职位列表 -->
    <select id="selectByDeptId" resultMap="BaseResultMap">
        SELECT *
        FROM positions
        WHERE dept_id = #{deptId}
          AND deleted = 0
        ORDER BY level ASC, id ASC
    </select>

    <!-- 根据职位编码查询职位 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT *
        FROM positions
        WHERE position_code = #{positionCode}
          AND deleted = 0
        LIMIT 1
    </select>

</mapper>
